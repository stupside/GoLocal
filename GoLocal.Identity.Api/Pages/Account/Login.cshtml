@page "/account/login"
@model GoLocal.Identity.Api.Pages.Account.Login

<style>
    label{
        font-family: Lato,serif; margin-bottom: 2%; font-size: 120%;
    }
    input{
        font-family: Lato,serif; border: 2px solid #00A6FF; border-radius: 13px; text-indent: 5%; min-height: 4vh; margin-bottom: 3%;
    }

    button[type=submit]{
        background: #00A6FF; color: white; border-radius: 60px; border: 0; min-height: 4vh; font-family: Lato,serif; font-size: 120%; cursor: pointer; transition-duration: 0.3s;
    }
    button[type=submit]:disabled{
        background: grey;
        cursor: not-allowed;
        pointer-events: none;
    }
    button[type=submit]:hover,
    button[type=submit]:focus,
    button[type=submit]:active {
        transform: scale(1.05);
        border: 2px solid #6ECCFF;
        color: white;
    }
</style>



<form method="post">
    <div style="display: flex;flex-direction: column;align-items: center;justify-content: center; min-height: 100vh">
        
        <img src="https://media.discordapp.net/attachments/814191400664301643/844668239447195708/goLocal.png" style="width: auto" alt="">

        <div asp-validation-summary="All" style="display: flex; flex-direction: column;width: 100%; max-width: 400px; border-radius: 60px;padding: 3rem 3rem 1rem;">

            <input type="hidden" asp-for="ReturnUrl"/>

            <label>Username</label>
            <input asp-for="Username" placeholder="Username"/>

            <label>Password</label>
            <input asp-for="Password" type="password" placeholder="Password" class="textInput"/>

            <a asp-page="ResetPassword">Forgot password ?</a>
            <button type="submit">Login</button>
        </div>
        <a asp-page="Register">Register</a>
    </div>
</form>